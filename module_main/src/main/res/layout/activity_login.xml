<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_splash"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ci_logon"
            android:layout_width="@dimen/px275"
            android:layout_height="@dimen/px275"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px15"
            android:gravity="center"
            android:text="社交"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/px59"
        android:layout_marginStart="@dimen/px15">

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginHorizontal="@dimen/px121"
            android:background="@drawable/bg_login_edittextt"
            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="请输入账号"
            android:paddingHorizontal="20dp"
            android:paddingVertical="@dimen/px35"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px15">

        <EditText
            android:id="@+id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/px121"
            android:background="@drawable/bg_login_edittextt"
            android:drawableLeft="@drawable/psd"
            android:drawablePadding="10dp"
            android:hint="请输入账号"
            android:inputType="textPassword"
            android:paddingVertical="@dimen/px35"
            android:paddingStart="20dp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/px121"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_button"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20">

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="没有账号?立即注册"
            android:textColor="@drawable/bg_sign_up_text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>